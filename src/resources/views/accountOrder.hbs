<div class="container-xl account-order-container">
    <div class="row">
        <div class="col-12 col-md-4 col-lg-3 my-3">
            <div class="account-sidebar list-group">
                <div class="d-flex justify-content-center align-items-end" style="height: 48px">
                    <p class="bg-dark text-white px-1 m-0">ChicPet Member</p>
                </div>
                <div class="account-sidebar__user d-flex align-items-center">
                    <div class="d-flex sidebar-user_name fw-bold text-wrap align-item-center">
                        <i class="sidebar-user__icon fas fa-paw px-4"></i>
                        <span>{{user.fullname}}</span>
                    </div>
                </div>
                <div class="account-sidebar__itemlist">
                    <a href="/account/profile" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
                        <i class="sidebar-item__icon fas fa-user-alt"></i>
                        <span>Thông tin cá nhân</span>
                    </a>
                    <a href="/account/order" class="account-sidebar__item account-sidebar__item--active list-group-item list-group-item-action text-wrap">
                        <i class="sidebar-item__icon fas fa-receipt"></i>
                        <span class="sidebar-item__name">Danh sách đơn hàng</span>
                    </a>
                    <a href="#" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
                        <i class="sidebar-item__icon fas fa-envelope text-wrap"></i>
                        <span class="sidebar-item__name">Gửi ý kiến cho ChicPet</span>
                    </a>
                    <a href="/logout" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
                        <i class="sidebar-item__icon fas fa-sign-out-alt"></i>
                        <span class="sidebar-item__name">Thoát</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8 col-lg-9 my-3">
            <h4 class="text-uppercase mb-4 mt-4">Danh sách đơn hàng</h4>
            <div class="order-card-list">
                {{#each orders }}
                    <div class="order-card">
                        <a href="/account/get-order/{{this.orderCode}}" class="order-card-header d-inline-flex d-flex justify-content-between">
                            <div class="col">
                                <div class="order-code text--primary">#{{this.orderCode}}</div>
                                <span class="order-date ">{{this.createdAt}}</span>
                            </div>
                            {{#ifCond this.status '==' 'Chờ xác nhận'}}
                                <div class="order-status order-status--confirming align-self-center">
                                    <span>Chờ xác nhận</span>
                                </div>
                            {{/ifCond}}
                            {{#ifCond this.status '==' 'Đã xác nhận'}}
                                <div class="order-status order-status--confirmed align-self-center">
                                    <span>Đã xác nhận</span>
                                </div>
                            {{/ifCond}}
                            {{#ifCond this.status '==' 'Đã hoàn thành'}}
                                <div class="order-status order-status--completed align-self-center">
                                    <span>Đã hoàn thành</span>
                                </div>
                            {{/ifCond}}
                        </a>
                        <div class="col service-list">
                            {{#each this.services}}
                                <div class="row service-item">
                                    <div class="service-item__image">
                                            
                                    </div>
                                    <span class="col service-item__content">
                                        <a href="#" class="service-item__name">{{this.serviceName}}</a>
                                        <div class="service-item__quantity">x {{this.quantity}}</div>
                                        <div class="service-item__type">{{this.type}}</div>
                                    </span>
                                </div>
                            {{/each}}
                        </div>
                        <div class="order-card-total d-flex justify-content-end">
                            <div class="total">
                                Tổng đơn hàng: 
                                <span class="total__amount">{{this.total}}đ</span>
                            </div>
                        </div>
                    </div>
                {{/each}}


