<link rel="stylesheet" href="/css/customerAccountSidebar.css">

<div class="account-sidebar list-group">
    <div class="d-flex justify-content-center align-items-end" style="height: 48px">
        <p class="bg-dark text-white px-1 m-0">ChicPet Member</p>
    </div>
    <div class="account-sidebar__user d-flex align-items-center">
        <div class="d-flex sidebar-user_name fw-bold text-wrap align-item-center">
            <i class="sidebar-user__icon fas fa-paw px-4"></i>
            <span>{{user.fullname}}</span>
        </div>
    </div>
    <div class="account-sidebar__itemlist">
        <a href="/account/profile" id="account_sidebar__profile" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
            <i class="sidebar-item__icon fas fa-user-alt"></i>
            <span>Thông tin cá nhân</span>
        </a>
        <a href="/account/order" id="account_sidebar__order" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
            <i class="sidebar-item__icon fas fa-receipt"></i>
            <span class="sidebar-item__name">Danh sách hóa đơn</span>
        </a>
        <a href="/account/contact" id="account_sidebar__contact" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
            <i class="sidebar-item__icon fas fa-envelope text-wrap"></i>
            <span class="sidebar-item__name">Gửi ý kiến cho ChicPet</span>
        </a>
        <a href="/logout" id="account_sidebar__logout" class="account-sidebar__item list-group-item list-group-item-action text-wrap">
            <i class="sidebar-item__icon fas fa-sign-out-alt"></i>
            <span class="sidebar-item__name">Thoát</span>
        </a>
    </div>
</div>