
<title>Login Page</title>
<link rel="stylesheet" type="text/css" href="./css/login.css">


    {{#if message}}
    <div style="text-align: center" class="alert alert-{{message.type}} fixed-top  alert-dismissible fade show" id = "message"  role="alert">
       	<strong>{{message.intro}}</strong> {{message.message}}
	    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
	<script type="text/javascript">window.setTimeout("document.getElementById('message').style.display='none';", 4000); </script>
	

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">

			<div class="card-header">
				<h3>Login</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-google-plus-square"></i></span>
				</div>
			</div>
			<div class="card-body">
				<form class="form-login" action="/login" method="POST">
					<div class="input-group form-group pt-3 pb-2">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username" name = "tenDangNhap">
					</div>

					<div class="input-group form-group py-2">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password" name = "matKhau">
					</div>


					<div class="row align-items-center remember py-2">
						<input type="checkbox">Remember Me
					</div>


					<div class="form-group d-flex justify-content-end pt-3">
						<input type="submit" id="login_btn" value="Login" class="btn float-right login_btn">
					</div>
				</form>
			</div>
			<script>
				let btn = document.getElementById("login_btn");
				btn.addEventListener("keypress", e =>{
					e.preventDefault();
					if(e.keyCode === 13){
						btn.click();
					}
				})
			</script>

			<div class="card-footer text-center">
				<div>
                    <a href="#" class="text-decoration-none"><small>Forgot Password?</small></a>
                    <a href="./signup" class="text-decoration-none"><small>Create account</small></a>
                </div>
			</div>
		</div>
	</div>
</div>
